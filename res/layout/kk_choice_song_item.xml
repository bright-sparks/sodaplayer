<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/qc_song_item_bg"
        android:paddingBottom="15.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="12.0dip"
        android:paddingTop="15.0dip" >

        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxWidth="160.0dip"
            android:singleLine="true"
            android:text="东风破"
            android:textColor="@color/qc_room_black_font"
            android:textSize="13sp" />

        <Button
            android:id="@+id/song_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pink_btn_bg"
            android:paddingLeft="14.0dip"
            android:paddingRight="14.0dip"
            android:text="点歌"
            android:textColor="@color/qc_room_white" />

        <TextView
            android:id="@+id/song_singer"
            android:layout_width="70.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="24.0dip"
            android:layout_toLeftOf="@id/song_operate"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="周杰伦"
            android:textColor="@color/qc_room_black_font" />
    </RelativeLayout>

    <TextView
        android:id="@+id/last_view"
        android:layout_width="fill_parent"
        android:layout_height="64.0dip"
        android:background="@color/qc_room_trans"
        android:visibility="gone" />

</LinearLayout>