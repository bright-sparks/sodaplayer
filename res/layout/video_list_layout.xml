<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qc_room_white"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="8dp" >

    <ListView
        android:id="@+id/video_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/qc_room_trans"
        android:dividerHeight="3dp"
        android:listSelector="@color/qc_room_trans"
        android:scrollbars="none" >
    </ListView>

    <TextView
        android:id="@+id/no_weivideo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="暂无内容"
        android:textColor="@color/qc_room_black_font"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>